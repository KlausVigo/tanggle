Package: tanggle
Type: Package
Title: Visualization of Phylogenetic Networks
Version: 1.14.0
Authors@R: c(person("Klaus", "Schliep", email="klaus.schliep@gmail.com", 
    role = c("aut", "cre"), comment = c(ORCID = "0000-0003-2941-0161")),
